#!/bin/sh

# Source scripts in /etc/X11/xinit/xinitrc.d/
if [ -d /etc/X11/xinit/xinitrc.d ]; then
	for f in /etc/X11/xinit/xinitrc.d/*; do
		[ -x "$f" ] && . "$f"
	done
	unset f
fi

# Load xorg resources
[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources

# Set terminal
export TERMINAL=xterm
exec i3
